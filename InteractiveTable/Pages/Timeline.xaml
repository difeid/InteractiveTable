<Page x:Class="InteractiveTable.Pages.Timeline"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" Width="1600" Height="900">
    <Grid UseLayoutRounding="True">
        <Grid.Background>
            <ImageBrush ImageSource="/InteractiveTable;component/Images/Timeline/TimelineMaket.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="720"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
            <Canvas Height="600" Width="2000" VerticalAlignment="Bottom">
                <!--Кнопки-->
                <Button x:Name="y1828_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1828.png" Canvas.Left="62" Canvas.Top="8"/>
                <Button x:Name="y1844_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1844.png" Canvas.Left="175" Canvas.Top="202"/>
                <Button x:Name="y1847_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1847.png" Canvas.Left="398" Canvas.Top="328"/>
                <Button x:Name="y1851_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1851.png" Canvas.Left="512" Canvas.Top="135"/>

                <Button x:Name="y1852_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1852.png" Canvas.Left="736" Canvas.Top="6"/>
                <Button x:Name="y1854_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1854.png" Canvas.Left="849" Canvas.Top="200"/>
                <Button x:Name="y1855_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1855.png" Canvas.Left="1075" Canvas.Top="330"/>
                <Button x:Name="y1856_button" Click="Year_Button_Click" Template="{DynamicResource HexagonButtonTemplate}" Width="270" Height="270"
                    Padding="20,0" Content="/InteractiveTable;component/Images/Timeline/1856.png" Canvas.Left="1187" Canvas.Top="138"/>
                
                <!--Кружочки и пути-->
                
            </Canvas>
        </ScrollViewer>

        <Button x:Name="back_button" Template="{DynamicResource BackButtonTemplate}" Click="Back_Button_Click" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,75,0,0"/>
    </Grid>
</Page>
